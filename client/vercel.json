{
  "rewrites": [
    {
      "source": "/(manifest.json|sw.js|ginvoice-192.png|ginvoice-512.png|ginvoice.png|screenshot-mobile.png|screenshot-desktop.png)",
      "destination": "/$1"
    },
    {
      "source": "/api/:match*",
      "destination": "https://ginvoice1.onrender.com/api/:match*"
    },
    {
      "source": "/entitlements",
      "destination": "https://ginvoice1.onrender.com/entitlements"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/manifest+json"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
